<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.market.activities.MainActivity">

    <LinearLayout
        android:id="@+id/lnVagasDisponiveissLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/branco_fundo"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:shape="oval"
            app:cardBackgroundColor="@color/branco"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/branco"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:stretchColumns="0,1">

                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:fontFamily="sans-serif"
                            android:paddingBottom="@dimen/margin_8dp"
                            android:paddingTop="@dimen/margin_8dp"
                            android:text="Minha Loja"
                            android:textColor="@color/preto"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/iv_ver_mais_sua_unidade"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:background="@color/branco"
                            android:src="@drawable/ic_list_black_48dp" />
                    </TableRow>
                </TableLayout>

                <ListView
                    android:id="@+id/lv_sua_unidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/branco" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:shape="rectangle"
            app:cardBackgroundColor="@color/branco">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/branco"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:stretchColumns="0,1">

                    <TableRow>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingBottom="@dimen/margin_8dp"
                            android:paddingTop="@dimen/margin_8dp"
                            android:text="Outras Lojas"
                            android:textColor="@color/preto"
                            android:textSize="15dp" />

                        <ImageView
                            android:id="@+id/iv_ver_mais_outras_unidades"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="right"
                            android:background="@color/branco"
                            android:src="@drawable/ic_list_black_48dp" />
                    </TableRow>

                </TableLayout>

                <ListView
                    android:id="@+id/lv_outras_unidades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/branco" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</RelativeLayout>
